[flake8]
max-line-length = 120
# Ignore most style issues, focus on real problems
extend-ignore = E203,W503,E501,D,F401,F841,E722,E402,F541
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .eggs,
    *.egg-info,
    htmlcov,
    .pytest_cache,
    .mypy_cache,
    examples.py,
    examples_tools.py,
    test_retry.py,
    test_retry_scenarios.py

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F841
