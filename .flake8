[flake8]
max-line-length = 120
# Ignore style issues - focus on real problems
# C901: too complex
# B017: assertRaises(Exception)
# B023: function definition does not bind loop variable
# SIM*: simplify suggestions (often less readable)
# E203,W503: black compatibility
# E501: line too long (handled by black)
# D: docstrings (handled by pydocstyle)
# F401: imported but unused
# F841: local variable assigned but never used
extend-ignore = E203,W503,E501,D,F401,F841,E722,E402,F541,C901,B017,B023,SIM102,SIM105,SIM114,SIM117,SIM910
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .eggs,
    *.egg-info,
    htmlcov,
    .pytest_cache,
    .mypy_cache,
    examples.py,
    examples_tools.py,
    example_*.py,
    test_retry.py,
    test_retry_scenarios.py

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F841,B017,SIM117
